<?xml version="1.0"?>

<class name="OccupancyMap" description="Grid containing measurements of obstacle positions and free space">

	<description type="text">
		Module implementing a Bayesian filter occupancy map.
	</description>

	<example description="A simple example">
		<module
			class="OccupancyMap"
			name="OccupancyMap"
		/>
	</example>

	<parameter name="max_distance" type="float" description="Maximum distance to consider for the occupancy map in meters" default="10.0" />
	<parameter name="prior" type="float" deafult="0.5" description="Prior expectation of walls" />
	<parameter name="empty_probability" type="float" default="0.35" description="Evidence accumulated by an observation of empty space" />
	<parameter name="occupied_probability" type="float" default="0.9" description="Evidence accumulated by an observation of occupied space" />

	<input name="R_ARRAY" description="Array of radii of objects detected by the lidar sensor" size="8192" />
	<input name="THETA_ARRAY" description="Array of angles of objects detected by the lidar sensor" size="8192" />
	<output name="OCCUPANCY_MATRIX" description="Matrix of expected occupied cells in the grid" size_x="256" size_y="256" />
	<output name="GRID_MATRIX" description="Matrix of positions of objects detected by the lidar sensor" size_x="256" size_y="256" />

	<link class="OccupancyMap" />

