<?xml version="1.0"?>

<group title = "Delta Demo">

    <module
        class = "Constant"
        name = "X"
        data = "1 2; 3 4; 5 6; 6 7"
        outputsize_x = "2"
        outputsize_y = "4"
    />

    <module
        class = "Constant"
        name = "Y"
        data = "1; 1; 0; 0"
        outputsize_x = "1"
        outputsize_y = "4"
    />

    <module
        class = "Trainer"
        name = "Trainer"
        crossvalidation = "odd"
    />

    <module
        class = "Delta"
        name = "Delta"
    />

    <connection sourcemodule = "X"  source = "OUTPUT" targetmodule = "Trainer"  target = "TRAINING_DATA_X" />
    <connection sourcemodule = "Y"  source = "OUTPUT" targetmodule = "Trainer"  target = "TRAINING_DATA_Y" />

    <connection sourcemodule = "Trainer"  source = "TRAIN_X" targetmodule = "Delta"  target = "CS" />
    <connection sourcemodule = "Trainer"  source = "TRAIN_Y" targetmodule = "Delta"  target = "US" />

    <connection sourcemodule = "Trainer"  source = "TEST_X" targetmodule = "Delta"  target = "CS" />
    <connection sourcemodule = "Delta"    source = "CR" targetmodule = "Trainer"  target = "TEST_Y" delay = "0" />

    <view>
        <object class="Table" module="Trainer" source="TRAIN_X" x="0" y="0" max = "10"/>
        <object class="Table" module="Trainer" source="TRAIN_Y" x="1" y="0" max = "10"/>
        <object class="Table" module="Delta" source="CR" x="2" y="0" max = "10"/>
    </view>
    
    <module class = "Logger" name = "Logger" />
</group>


