<?xml version="1.0"?>

<group name="Popluation Decoder Demo">
	
    <module
        class = "Sweep"
        name = "Signal"
        outputsize = "1"
        min = "-2"
        max = "2"
        step = "-0.01"
    />
		
    <module
        class = "PopulationCoder"
        name = "PopulationCoder"
        min  = "-2"
        max  = "2"
        sigma = "3"
        size = "20"
    />
		
    <module
        class = "PopulationDecoder"
        name = "PopulationDecoder"
        min  = "-2"
        max  = "2"
    />
		
    <connection sourcemodule="Signal" source="OUTPUT" targetmodule="PopulationCoder" target="INPUT"  delay = "1" />
    <connection sourcemodule="Signal" source="OUTPUT" targetmodule="PopulationCoder" target="INPUT"  delay = "1" />

    <connection sourcemodule="PopulationCoder" source="OUTPUT" targetmodule="PopulationDecoder" target="INPUT"  delay = "1" />

    <view name="View">
        <object class="Plot" module="Signal" source="OUTPUT" x="0" y="0"/>
        <object class="Grid" module="PopulationCoder" source="OUTPUT" x="1" y="0"/>
        <object class="Plot" module="PopulationCoder" source="OUTPUT" x="0" y="1"/>
    </view>

</group>
 
