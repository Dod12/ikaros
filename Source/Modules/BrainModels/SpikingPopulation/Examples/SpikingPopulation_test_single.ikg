<?xml version="1.0"?>

<group title="Excitation inhibition test" vThreshold="20" vPopSize="2" >
	
		<module
			class = "Constant"
			name = "MyConstant"
			outputsize  = "2"
			data  = "0.0 0.0"
		/>

        <module
			class = "Constant"
			name = "ExcitationConst"
			outputsize  = "2"
			data  = "1 1"
		/>
		

		<module
			class="SpikingPopulation"
			name="SensorNeuron"
			model_type = "Izhikevich"
			neuron_type = "regular_spiking"
			population_size = "@vPopSize"
			substeps = "2"
			threshold = "@vThreshold"
			debug = "true"
		/>
       
			
		<module
			class = "Scale"
			name = "Scale"
			_factor = "5"
		/>
		
        <_connection  source = "ExcitationConst.OUTPUT"  target = "SensorNeuron.EXCITATION" />
		<connection  source = "Scale.OUTPUT"  target = "SensorNeuron.INHIBITION" />
        <connection  source = "MyConstant.OUTPUT"  target = "SensorNeuron.DIRECT_IN" />
		<connection  source = "ExcitationConst.OUTPUT"  target = "Scale.INPUT" />  
		
		
        
		<view name="View" >
	<slider-horizontal  show_values = "true" y = "0" xindex = "0" min = "0.9" height = "100" max = "100" width = "200" _module = "Scale" count = "1" parameter = "Scale.factor" step = "0.01" show_title = "true" title = "Scale inhibition" x = "200" select = "0" labels = "" show_frame = "false" style = "" frame-style = ""/>
	<bar-graph  title = "Scale output" max = "100" height = "200" width = "200" min = "-1" y = "0" x = "400" source = "Scale.OUTPUT" direction = "horizontal" show_title = "true" transpose = "false" labels = "" color = "" fill = "" lineWidth = "1" lineCap = "" lineJoin = "" auto = "false" show_frame = "false" style = "" frame-style = ""/>
	<bar-graph  title = "Sensor neuron" max = "100" height = "200" width = "200" min = "-100" y = "200" x = "0" source = "SensorNeuron.OUTPUT" direction = "horizontal" show_title = "true" transpose = "false" labels = "" color = "" fill = "" lineWidth = "1" lineCap = "" lineJoin = "" auto = "false" show_frame = "false" style = "" frame-style = ""/>
	<plot  show_title = "true" title = "Sensor neuron" max = "30" height = "741" width = "501" min = "-70" y = "200" x = "200" source = "SensorNeuron.OUTPUT" select = "" buffer_size = "50" direction = "vertical" color = "" show_frame = "false" style = "" frame-style = ""/>
	<slider-horizontal  show_values = "true" y = "0" xindex = "0" min = "0.1" height = "100" max = "100" width = "200" _module = "Scale" count = "2" parameter = "MyConstant.data" step = "0.01" show_title = "true" title = "Direct in" x = "0" select = "0" labels = "" show_frame = "false" style = "" frame-style = ""/>
</view>




</group>
 
