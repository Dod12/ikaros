<?xml version="1.0"?>

<!-- Example for the Downsample module. -->

<group title="Downsample Examples">
	
		<module
			class = "InputJPEG"
			name = "Image"
			filename = "../../../../../../Examples/Media/cannes.jpg"
		/>

		<module class = "Downsample" name = "D1" />
		<module class = "Downsample" name = "D2" />
		<module class = "Downsample" name = "D3" />
		<module class = "Downsample" name = "D4" />

		<connection sourcemodule = "Image" source = "INTENSITY" targetmodule = "D1" target = "INPUT" delay="0" />
		<connection sourcemodule = "D1" source = "OUTPUT" targetmodule = "D2" target = "INPUT" delay="0" />
		<connection sourcemodule = "D2" source = "OUTPUT" targetmodule = "D3" target = "INPUT" delay="0" />
		<connection sourcemodule = "D3" source = "OUTPUT" targetmodule = "D4" target = "INPUT" delay="0" />

		<view name="Downsample demo">
				  
				  <image
				  w = "4"
				  scales = "no"
				  y = "300"
				  flipXCanvas = "no"
				  flipYAxis = "no"
				  h = "4"
				  format = "gray"
				  source = "OUTPUT"
				  x = "800"
				  max_y = "1"
				  height = "201"
				  module = "D4"
				  flipYCanvas = "no"
				  width = "221"
				  title = "Output"
				  max_x = "1"
				  scale = "both"
				  flipXAxis = "no"
				  class = "image"
				  />
				  
				  <image
				  w = "4"
				  scales = "no"
				  y = "80"
				  flipXCanvas = "no"
				  flipYAxis = "no"
				  h = "4"
				  format = "gray"
				  source = "INTENSITY"
				  x = "20"
				  max_y = "1"
				  height = "201"
				  module = "Image"
				  flipYCanvas = "no"
				  width = "241"
				  title = "Output"
				  max_x = "1"
				  scale = "both"
				  flipXAxis = "no"
				  class = "image"
				  />
				  
				  <image
				  w = "4"
				  scales = "no"
				  y = "300"
				  flipXCanvas = "no"
				  flipYAxis = "no"
				  h = "4"
				  format = "gray"
				  source = "OUTPUT"
				  x = "540"
				  max_y = "1"
				  height = "201"
				  module = "D3"
				  flipYCanvas = "no"
				  width = "241"
				  title = "Output"
				  max_x = "1"
				  scale = "both"
				  flipXAxis = "no"
				  class = "image"
				  />
				  
				  <image
				  w = "4"
				  scales = "no"
				  y = "300"
				  flipXCanvas = "no"
				  flipYAxis = "no"
				  h = "4"
				  format = "gray"
				  source = "OUTPUT"
				  x = "280"
				  max_y = "1"
				  height = "201"
				  module = "D2"
				  flipYCanvas = "no"
				  width = "241"
				  title = "Output"
				  max_x = "1"
				  scale = "both"
				  flipXAxis = "no"
				  class = "image"
				  />
				  
				  <image
				  w = "4"
				  scales = "no"
				  y = "300"
				  flipXCanvas = "no"
				  flipYAxis = "no"
				  h = "4"
				  format = "gray"
				  source = "OUTPUT"
				  x = "20"
