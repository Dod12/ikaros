<?xml version="1.0"?>

<!--

    Testing button that writes image to file each time it is pressed
 
-->

<group>
        <module
            class = "InputJPEG"
            name = "IN"
            filename = "../../../../../../Examples/Media/colorrobot.jpg"
            _iterations = "5"
        />
        
        <module
            class = "OutputJPEG"
            name = "OUT"
            filename = "color%02d.jpg"
            quality = "1"
            increase_file_no_on_trig = "yes"
            single_trig = "yes"
        />

        <module
            class = "Constant"
            name = "Trig"
            data = "0"
        />

        <connection sourcemodule = "IN" source = "RED" targetmodule = "OUT" target = "RED" />
        <connection sourcemodule = "IN" source = "GREEN" targetmodule = "OUT" target = "GREEN" />
        <connection sourcemodule = "IN" source = "BLUE" targetmodule = "OUT" target = "BLUE" />

        <connection sourcemodule = "Trig" source = "OUTPUT" targetmodule = "OUT" target = "WRITE" />

        <view name = "View 1">
            <object class="Image" type="rgb" module="IN" source="RED+GREEN+BLUE" x="0" y="0" h="2" w="2" />
            <object class="Button" module="Trig" parameter="data" x="2" y="0"  />
        </view>

        <module class = "Logger" name = "Logger" />
</group>


