<?xml version="1.0"?>

<group title="Topology Example">
	
		<module
			class = "Constant"
			name = "MyConstant"
			outputsize  = "2"
			data  = "1 2"
		/>
		<module
		  class       =   "FunctionGenerator"
		  name        =   "SquareGen"
		  type        =   "square"
		  frequency  =  "0.001"
		  offset      =   "0.0"
		  amplitude   =   "1"
		  shift       =   "0.0"
		/>
		<connection source = "SquareGen.OUTPUT"  target = "Ensemble.EXCITATION" />

		<module
		class="NucleusEnsemble"
		name="Ensemble"
		size="3"
		/>

		<module
			class = "Topology"
			name = "TopologyInstance"
			
		/>
		
        <connection source = "MyConstant.OUTPUT" target = "TopologyInstance.INPUT1" />
        

		<view name="View">
			<plot 
				source="SquareGen.OUTPUT" 
				
				x="0" y="0" width="100" height="100"
				min="0"
				max="2"
			/>
			<plot 
				source="TopologyInstance.OUTPUT" 
				x="0" y="100" width="100" height="100"
				min="0"
				max="2"
			/>
		</view>

</group>
 
