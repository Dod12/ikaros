<?xml version="1.0"?>

<group name="Mean" description="Means inputs">

	<description type="text">
		Module that calculates the means of all elements in its input.
	</description>

	<example description="A simple example">
		<module
			class="Mean"
			name="Mean"
		/>
	</example>

	<input name="INPUT" description="The  input" />

	<output name="OUTPUT" description="The Mean" size="1" />

	<module class="Mean" />

    <view title="Mean">
        <object
            x="0" y="0" w="2"
            class="BarGraph"
            module="*"
            source="OUTPUT"
            title="Default view for Mean"
        />
    </view>
    
