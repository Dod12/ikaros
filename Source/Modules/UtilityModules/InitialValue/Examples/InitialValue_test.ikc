<?xml version="1.0"?>

<group title="InitialValue Example">
	
		<module
			class = "Constant"
			name = "MyConstant"
			outputsize  = "2"
			data  = "0.01 0.02"
		/>


		<module
			class = "InitialValue"
			name = "InitialValueInstance"
			outputsize  = "2"
			data  = "1 2"
			wait = "5"
			debug = "false"
		/>

		<module
			class = "Subtract"
			name = "Subtract"
		/>
		<connection sourcemodule = "InitialValueInstance" source = "OUTPUT" targetmodule = "Subtract" target = "INPUT1" delay="0"/>
		<connection sourcemodule = "MyConstant" source = "OUTPUT" targetmodule = "Subtract" target = "INPUT2" delay="0"/>
        <connection sourcemodule = "Subtract" source = "OUTPUT" targetmodule = "InitialValueInstance" target = "INPUT" delay="1"/>
        
		<view name="View">
			
			<bar-graph 
				module="InitialValueInstance" 
				source="OUTPUT" 
				x="40" y="40" width="300" height="300"
				min="0"
				max="2"
			/>
		</view>

</group>
 
